package lab4;
import java.util.Random;
import java.util.Arrays;
public class Tablica40 {

	public static void main(String[] args) {
		Boolean tab[] = new Boolean[40]; //Tworzenie tablicy typu boolean o rozmiarze 40.
		for (int i =0;i<tab.length;i++) //Petla for, ktora przy spelnieniu warunku if "i modulo 2 = 0", przypisuje komorkom wartosc false. 
		{
            if (i%2==0) 
            {
                tab[i] = false;
            }
            else //Jezeli warunek nie zostanie spelniony, komorkom zostaje przypisana wartosc true.
            {
                tab[i] = true;
            }
    }
    for(int i = 0; i< tab.length;i++) //Petla for wypisujaca wszystkie indeksyu tablicy wraz z ich wartosciami.
    {
        System.out.println("Wartosc indeksu tablicy: " + tab[i]);
    }
	}
}
