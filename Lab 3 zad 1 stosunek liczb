package lab3;
import java.util.Scanner;
public class Liczbystos {

	static private double sumaParzyste;
    static private double sumaNieparzyste;
    static private int countParzyste;
    static private int countNieparzyste;
    
	public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int liczba = s.nextInt();

        for(int i =1; i<=liczba;i++){
            if(i%2==0) parzysta(i);
            else nieparzysta(i);
        }

	System.out.println("sr nieparzysta: " + sumaParzyste/countParzyste);
        System.out.println("sr parzysta: " + sumaNieparzyste/countNieparzyste);
        System.out.println("stosunek: " + Math.abs((sumaNieparzyste/countNieparzyste)/(sumaParzyste/countParzyste)));

        if(pierwsza(liczba)) System.out.println("liczba pierwsza");
        else System.out.println("liczba nie jest pierwsza");

    }

    private static boolean pierwsza(int liczba) {
        if(liczba <=1){return false;}

        for(int i=2; i<=liczba/2;i++){
            if(liczba%i==0)return false;
        }

        return true;
    }

    private static void parzysta(int liczba) {
    sumaParzyste += liczba;
    countParzyste++;
    }

    private static void nieparzysta(int liczba) {
    sumaNieparzyste += liczba;
    countNieparzyste++;
    }

}
